      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
	<exclude>*-jar-with-dependencies.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>extjars</directory>
      <outputDirectory>extjars</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>intjars</directory>
      <outputDirectory>intjars</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>share/scripts</directory>
      <outputDirectory>share/scripts</outputDirectory>
      <includes>
        <include>run*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>exportonrelease</directory>
      <outputDirectory>share/doc</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
