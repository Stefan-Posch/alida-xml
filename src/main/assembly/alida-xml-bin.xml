  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
<!--        <include>NOTICE*</include>-->
      </includes>
    </fileSet>
    <fileSet>
      <!-- TODO: use expresssions instead: ${project.build.directory}, ${project.build.finalName} -->
